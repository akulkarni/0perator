{
  "name": "0perator",
  "version": "0.2.0",
  "description": "Build full-stack applications instantly through natural conversation",
  "author": "Tiger Data",
  "type": "module",
  "bin": {
    "0perator": "dist/index.js"
  },
  "files": [
    "dist",
    "skills",
    "templates"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "preuninstall": "node dist/scripts/cleanup.js",
    "dev": "tsx src/index.ts",
    "dev:mcp": "tsx src/index.ts mcp start",
    "start": "node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector tsx src/index.ts mcp start",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "format": "biome format --write",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@antfu/ni": "^28.0.0",
    "@clack/prompts": "^0.11.0",
    "@tigerdata/mcp-boilerplate": "^0.8.0",
    "commander": "^14.0.2",
    "comment-json": "^4.4.1",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "shx": "^0.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
